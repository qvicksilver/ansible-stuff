#cloud-config

# Hostname management
preserve_hostname: False
hostname: {{ inventory_hostname }}
fqdn: {{ fqdn | default(inventory_hostname) }}

timezone: Europe/Stockholm

ntp:
  pools:
    - se.pool.ntp.org
  enabled: true

{% if nameservers is defined or search_domains is defined %}
manage_resolv_conf: true
resolv_conf:
{% else %}
manage_resolv_conf: false
{% endif %}
{% if nameservers is defined -%}
  nameservers: [{% for nameserver in nameservers -%}'{{ nameserver }}'{% if not loop.last %},{% endif %}{% endfor %}]
{% endif -%}
{% if search_domains is defined -%}
  searchdomains:
  {% for search_domain in search_domains -%}
    - sofiero.net
  {% endfor -%}
{% endif -%}

# Remove cloud-init when finished with it
#runcmd:
#  - [ apt-get, -y, remove, cloud-init ]

# Configure where output will go
output: 
  all: ">> /var/log/cloud-init.log"

# Upgrade
package_update: true
package_upgrade: true
package_reboot_if_required: true

# configure interaction with ssh server
ssh_svcname: ssh
ssh_deletekeys: True
ssh_genkeytypes: ['rsa', 'ecdsa']

growpart:
  mode: auto
  devices: ['/']
  ignore_growroot_disabled: false

